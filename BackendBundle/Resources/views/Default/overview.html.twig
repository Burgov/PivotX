{% extends 'PivotXBackendBundle::base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block heading %}This is the heading{% endblock %}


{% block main %}

<div class="content-overview">

<h1>Overview for: {{ contenttype }}</h1>

{% if pager.isPaginable %}
   {{ paginate(pager, 'overview', {contenttype: contenttype}, "PivotXBackendBundle:Elements:pagination.html.twig") }}
{% endif %}

{% for item in pager.getResults %}

<div class="item">

    <strong>
        <a href="{{ path('view', { 'id': item.id }) }}">{{ item.id }} - {{ item.title }} </a>
    </strong>
    - {{ item.reference }}
    <p>{{item.excerpt }}</p>
    <p>Created: {{ item.datecreated|date("Y-m-d H:i") }} - Modified {{ item.datemodified|date("Y-m-d H:i") }} -
    Version {{ item.version }} - Status: {{ item.status }} - User: {{ item.user }} </p>
    <p>Responses: {{ item.responses|length }} - Extrafields: {{ item.extrafields|length }} -
    {# Taxonomies: {{ item.taxonomy|length }} #} -
    {# Media: {{ item.media|length }}</p> #}

</div>

{% endfor %}


{% if pager.isPaginable %}
   {{ paginate(pager, 'overview', {contenttype: contenttype}, "PivotXBackendBundle:Elements:pagination.html.twig") }}
{% endif %}

</div>


{% endblock %}
