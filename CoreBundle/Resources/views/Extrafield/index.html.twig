{% extends 'PivotXCoreBundle::base.html.twig' %}

{% block crud %}

<h1>Extrafield list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fieldkey</th>
            <th>Textvalue</th>
            <th>Floatvalue</th>
            <th>Datevalue</th>
            <th>Date</th>
            <th>Origincreator</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('extrafield_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.fieldkey }}</td>
            <td>{{ entity.textValue }}</td>
            <td>{{ entity.floatValue }}</td>
            <td>{% if entity.dateValue %}{{ entity.dateValue|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.originCreator }}</td>
            <td>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('extrafield_show', { 'id': entity.id }) }}" class="btn">show</a>
                    </li>
                    <li>
                        <a href="{{ path('extrafield_edit', { 'id': entity.id }) }}" class="btn">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('extrafield_new') }}" class="btn">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}
